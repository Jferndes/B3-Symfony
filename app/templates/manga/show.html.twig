{% extends 'base.html.twig' %}

{% block title %}Manga{% endblock %}

{% block body %}
    <h1>Manga</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ manga.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ manga.title }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ manga.price }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ manga.category.label }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    {% if manga.tags|length > 0 %}
                        <ul class="list-inline">
                            {% for tag in manga.tags %}
                                <li class="list-inline-item badge bg-secondary">{{ tag.name|capitalize }}</li>
                            {% endfor %}
                        </ul>
                    {% else %}
                        <em>Aucun tag</em>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ manga.createdAt ? manga.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ manga.updatedAt ? manga.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex">
        <a href="{{ path('app_manga_index') }}" class="btn btn-secondary me-2">back to list</a>
        <a href="{{ path('app_manga_edit', {'id': manga.id}) }}" class="btn btn-primary me-2">edit</a>
        {{ include('manga/_delete_form.html.twig') }}
    </div>
{% endblock %}